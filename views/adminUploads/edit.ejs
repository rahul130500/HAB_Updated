<%- include("../partials/header.ejs") %> 
<h1 class="text-3xl text-black pb-6">Edit Uploaded Image</h1>

<div class="flex flex-wrap justify-center">
    <div class="w-full lg:w-1/2 my-6 pr-0 lg:pr-2">
        <p class="text-xl pb-6 flex items-center">
            <i class="fas fa-list mr-3"></i> Edit Uploaded Image
        </p>
        <div class="leading-loose">
            <form class="p-10 bg-white rounded shadow-xl" action="/hab/admin<%= link %>?_method=PATCH" method="POST" enctype="multipart/form-data">
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="name">Image Name</label>
                    <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="name" type="text" name="image_name" value="<%=upload.image_name%>" required>
                </div>
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="image">Image</label>
                    <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" type="file" id="image" name="image" placeholder="image url" ></input>
                </div>
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="description">Description</label>
                    <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" type="text" rows="4" id="description" name="description" value="<%=upload.description%>" required></input>
                </div>
    
                
                <div class="mt-6">
                    <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" type="submit">Save</button>
                </div>
                <div class="mt-2"><a class="hover:text-blue-500" href="/hab/admin/uploads">Go Back</a></div>
            </form>
            
        </div>
    </div>
</div>
<%- include("../partials/footer.ejs") %> 