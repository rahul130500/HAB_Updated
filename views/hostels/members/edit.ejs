<%- include("../../partials/header.ejs") %> 
<h1 class="text-3xl text-black pb-6">Edit Member</h1>

<div class="flex flex-wrap justify-center">
    <div class="w-full lg:w-1/2 my-6 pr-0 lg:pr-2">
        <p class="text-xl pb-6 flex items-center">
            <i class="fas fa-list mr-3"></i> Edit Members
        </p>
        <div class="leading-loose">
            <form class="p-10 bg-white rounded shadow-xl" action="<%= link %>?_method=PATCH" method="POST" enctype="multipart/form-data">
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="name">Member Name</label>
                    <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="name" type="text" name="Mname" value="<%=mb.Mname%>" >
                </div>
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="position">Position</label>
                    <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="position" type="text" name="position" value="<%=mb.position%>" >
                </div>
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="priority">Priority Number</label>
                    <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="priority" type="number" name="priority" value="<%=mb.priority%>" >
                </div>
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="contact1">Contact Line 1</label>
                    <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="contact1" name="contact1" value="<%=mb.contact1%>"></input>
                </div>
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="contact2">Contact Line 2</label>
                    <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="contact2" name="contact2" value="<%=mb.contact2%>" ></input>
                </div>
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="email">Email Address</label>
                    <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="email" type="email" name="email" value="<%=mb.email%>">
                </div>
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="photo">Profile Image</label>
                    <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" type="file" id="photo" name="photo" placeholder="image url" ></input>
                </div>
    
                
                
                <div class="mt-6">
                    <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" type="submit">Save</button>
                </div>
                <div class="mt-6">
                    <a class="hover:text-blue-500" href="/hab/admin/hostels/<%=id1%>">Go Back</a>
                </div>
            </form>
            
        </div>
    </div>
</div>
<%- include("../../partials/footer.ejs") %> 