  <!-- <div class="mx-8 md:mx-32"> -->
  <div class=" mx-3 md:mx-32 flex flex-wrap justify-center md:justify-between mb-8" id="hostelnotice">
    <% notices.forEach((notice,i)=>{ %>
      <!-- single-notice-card -->
      <div class="w-full md:w-5/12 h-auto m-2 md:mb-4 p-9 border-2 rounded-lg shadow-lg">
        <div class="text-blue-600 font-bold text-sm float-left"><%=notice.category.toUpperCase() %></div>
        <div class="text-blue-600 font-bold text-sm float-right">
          <%=notice.creation.getDate()+'/'+(notice.creation.getMonth()+1)+'/'+notice.creation.getFullYear()%>
        </div>
        <br>
        <div class="font-bold text-xl my-3">
          <%= notice.title %> :
        </div>
        <p class="text-justify text-sm md:text-base">
          <%= notice.description%>
        </p>
        <div class="text-center font-normal text-sm text-gray-500 mt-3">
          <% if(notice.path.indexOf("https://")==-1) { %>
            <a class="hover:text-black hover:underline cursor-pointer"
              href="/hab/hostels/<%= hostel.id %>/notice/pdf/<%= notice.id %>  " target="_blank">View pdf</a>
            <% } else { %>
              <a class="hover:text-black hover:underline cursor-pointer" href="<%=notice.path%>" target="_blank">View
                link</a>
              <% } %>
        </div>
      </div>
      <% }) %>
  </div>
</section>